            android:id="@+id/sp_ejercicio"
            android:layout_width="300dp"
            android:layout_height="33dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="340dp" />

        <TextView
            android:id="@+id/lbl_Calorias"
            android:layout_width="300dp"
            android:layout_height="25dp"
