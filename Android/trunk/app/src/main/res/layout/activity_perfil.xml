            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/lbl_Logros"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
