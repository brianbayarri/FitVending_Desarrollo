<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlimentacionActivity">


    <Switch
        android:id="@+id/sw_desayuno"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginBottom="45dp"
        android:text="Desayuno 6:00-11:30"
        android:thumbTint="#9C9C9C"
        android:trackTint="#9C9C9C"
        />
    <Switch
        android:id="@+id/sw_almuerzo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="45dp"
        android:layout_marginLeft="250dp"
        android:text="Almuerzo 12:00-14:00"
        android:thumbTint="#9C9C9C"
        android:trackTint="#9C9C9C"
        />
    <Switch
        android:id="@+id/sw_cena"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="130dp"
        android:layout_marginLeft="45dp"
        android:text="Cena 20:00-24:00"
        android:thumbTint="#9C9C9C"
        android:trackTint="#9C9C9C"
        />
    <Switch
        android:id="@+id/sw_colacion"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="130dp"
        android:layout_marginLeft="250dp"
        android:text="Colacion 00:00-24:00"
        android:thumbTint="#9C9C9C"
        android:trackTint="#9C9C9C"
        />
</RelativeLayout>